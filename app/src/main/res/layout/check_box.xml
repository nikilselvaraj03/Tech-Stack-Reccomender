<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Carefully Select the feature for Database Implementation"
        android:textSize="20dp"
        android:textColor="#000000"
        android:id="@+id/heading"
        android:textAlignment="center"
        android:layout_marginTop="20dp"/>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_height="match_parent">

        <CheckBox
            android:layout_marginTop="0dp"
            android:text="CROSS PLATFORM SUPPORT"
            android:scaleType="fitXY"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db1" />

        <CheckBox
            android:layout_marginTop="0dp"
            android:text="RELATIONAL"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db2" />

        <CheckBox
            android:layout_marginTop="0dp"
            android:text="OBJECT"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db3" />

        <CheckBox
            android:layout_marginTop="0dp"
            android:text="GRAPHICAL USER INTERFACE"
            android:textSize="17dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db4" />

        <CheckBox
            android:text="STRUCTERED QUERY LANGUAGE"
            android:textSize="17dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db5" />
        <CheckBox
            android:text="APPLICATION PACKAGE INTERFACE"
            android:textSize="17dp"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db6" />

        <TextView
            android:text="Choose Proprietry"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" />
<RadioGroup
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <RadioButton
            android:text="PROPRIETRY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db7"
            android:onClick="onRadioButtonClicked"/>

        <RadioButton
            android:text="NON PROPRIETRY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db8"
            android:onClick="onRadioButtonClicked"/>
</RadioGroup>
        <TextView
            android:text="Select Typesystem"
            android:layout_width="match_parent"
            android:textSize="20dp"
            android:textColor="#000000"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:id="@+id/textView6" />
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <RadioButton
            android:text="STATIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db9"
            android:onClick="onRadioButtonClicked"/>
        <RadioButton
            android:text="DYNAMIC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/db10"
            android:onClick="onRadioButtonClicked"/>
        </RadioGroup>
<Button
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/next3"
    android:text="SUBMIT"/>

    </LinearLayout>
</ScrollView>

</FrameLayout>