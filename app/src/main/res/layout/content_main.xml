<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ffffff"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.clover.clu.MainActivity"
    tools:showIn="@layout/app_bar_main">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="PLATFORMS"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#ffffff">

        <TextView
            android:text="Choose a Platform"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp"
            >

            <ImageButton

                android:src="@drawable/android"
                android:id="@+id/android"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
                android:textColor="#000000"
                android:layout_alignParentLeft="true"
                android:text="ANDROID"
                />

            <ImageButton
android:src="@drawable/ios"
                android:id="@+id/ios"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:background="#ffffff"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:scaleType="fitXY"

                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <ImageButton
                android:src="@drawable/win"
                android:text="WINDOWS"
                android:textColor="#000000"
                android:layout_margin="20dp"

                android:background="#ffffff"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:id="@+id/win"
                />
            <ImageButton
                android:src="@drawable/macos"
                android:id="@+id/mac_os"
                android:layout_width="100dp"
                android:background="#ffffff"
                android:layout_margin="20dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:scaleType="fitXY"
                android:text="mac_os"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"



            android:layout_marginTop="5dp">

            <ImageButton

                android:src="@drawable/web"
                android:background="#ffffff"
                android:text="WEB APPLICTAION"
                android:textColor="#000000"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:layout_alignParentLeft="true"
                android:id="@+id/web"
                />
            <ImageButton
android:src="@drawable/tuxkernel"
                android:background="#ffffff"
                android:id="@+id/linux_distros"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:layout_margin="20dp"
                android:scaleType="fitXY"
                android:text="LINUX DISTROS"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="5dp">

            <ImageButton
android:src="@drawable/unix"
                android:text="UNIX DISTROS"
                android:textColor="#000000"
                android:layout_width="100dp"
                android:background="#ffffff"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:layout_margin="20dp"
                android:layout_alignParentLeft="true"
                android:id="@+id/unix_distros"
                />
            <ImageButton
android:src="@drawable/logochrmium"
                android:id="@+id/chrome"
                android:layout_width="100dp"
                android:background="#ffffff"
                android:layout_height="100dp"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:textColor="#000000"
                android:scaleType="fitXY"
                android:text="CHROME"
                />
        </RelativeLayout>





    </LinearLayout>
</ScrollView>

</FrameLayout>

